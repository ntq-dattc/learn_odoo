<odoo>
    <data>
        <record id="group_employee" model="res.groups">
            <field name="name">Employee Groups</field>
            <field name="comment">Employee Groups</field>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager Groups</field>
            <field name="comment">Manager Groups</field>
            <field name="implied_ids" eval="[(4, ref('group_employee'))]"/>
        </record>

        <record id="group_hr" model="res.groups">
            <field name="name">HR Groups</field>
            <field name="comment">HR Groups</field>
        </record>

        <record id="menu_hop_dong_access_hr" model="ir.model.access">
            <field name="name">Contract Access</field>
            <field name="model_id" ref="model_hop_dong"/>
            <field name="group_id" ref="test_module.group_hr"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="menu_work_exp_manager" model="ir.model.access">
            <field name="name">Contract Access</field>
            <field name="model_id" ref="model_hop_dong"/>
            <field name="group_id" ref="test_module.group_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="menu_work_exp_manager_rule" model="ir.rule">
            <field name="name">Contracts Access</field>
            <field name="model_id" ref="model_hop_dong"/>
            <field name="groups" eval="[(4, ref('test_module.group_manager'))]"/>
            <field name="domain_force">[('employee_id.parent_id', '=',user.employee_ids.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="menu_work_exp_employee" model="ir.model.access">
            <field name="name">Contract Access</field>
            <field name="model_id" ref="model_employee_work_exp"/>
            <field name="group_id" ref="test_module.group_employee"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="menu_work_exp" model="ir.rule">
            <field name="name">Work Exp Access</field>
            <field name="model_id" ref="model_employee_work_exp"/>
            <field name="groups" eval="[(4, ref('test_module.group_employee'))]"/>
            <field name="domain_force">[('employee_id', '=',user.employee_ids.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>