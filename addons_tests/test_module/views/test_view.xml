<odoo>
    <data>
        <report
                id="action_contract_template_test"
                string="Contract"
                model="hop.dong"
                report_type="qweb-pdf"
                name="test_module.report_contract_template_test"
                file="test_module.report_contract_template_test"
                print_report_name="'Contract'"
        />
        <template id="report_contract_template_test">
    <t t-call="web.basic_layout">
        <t t-set="contract" t-value="docs[0]"/>
        <style>
            .contract-table {
                font-size: 10pt;
                width: 100%;
                border-collapse: collapse;
            }
            .contract-table th,
            .contract-table td {
                padding: 8px;
                border: 1px solid #ccc;
            }
            .contract-table th {
                background-color: #f2f2f2;
                text-align: left;
                color: #333333;
            }
            .contract-table td {
                background-color: #ffffff;
                color: #777777;
            }
        </style>
        <div class="page">
            <div class="col-sm-6">
                <div align="center">
                    <h1>Contract Informations</h1>
                    <table class="contract-table">
                        <tr>
                            <th>Employee's Name</th>
                            <td><t t-esc="contract.employee_id.name"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Start Date</th>
                            <td><t t-esc="contract.start_date"/></td>
                        </tr>
                        <tr>
                            <th>Contract's End Date</th>
                            <td><t t-esc="contract.end_date"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Signed Date</th>
                            <td><t t-esc="contract.signed_date"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Type</th>
                            <td><t t-esc="contract.contract_type"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Salary Rack</th>
                            <td><t t-esc="contract.salary_rack"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Efficiency Wage</th>
                            <td><t t-esc="contract.efficiency_wage"/></td>
                        </tr>
                        <tr>
                            <th>Contract's Status</th>
                            <td><t t-esc="contract.status"/></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </t>
</template>

        <!-- Tree View -->
        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop.dong.tree</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="contract_type"/>
                    <field name="signed_date"/>
                    <field name="salary_rack" groups="test_module.group_hr"/>
                    <field name="efficiency_wage" groups="test_module.group_hr"/>
                    <field name="status"/>
                    <field name="employee_role"/>
                    <field name="employee_job"/>
                    <field name="employee_level"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_search" model="ir.ui.view">
            <field name="name">hop.dong.search</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Running Contracts" name="filter_running" domain="[('status', '=', 'running')]"/>
                    <separator/>
                    <filter string="Salary filter" name="filter_salary" domain="[('total_salary', '>', 20000000)]"/>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop.dong.form</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <h1>
                                Create New Contract
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="contract_type"/>
                                <field name="signed_date"/>
                                <field name="salary_rack"/>
                                <field name="efficiency_wage"/>
                            </group>
                            <group>
                                <field name="employee_role" readonly="1"/>
                                <field name="employee_job" readonly="1"/>
                                <field name="employee_level" readonly="1"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop.dong</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_running': 1}</field>
        </record>

        <menuitem id="menu_hop_dong" name="Hợp đồng" action="action_hop_dong"
                  groups="test_module.group_hr,test_module.group_manager"/>
    </data>
</odoo>

