<odoo>
    <data>
        <report
                id="action_contract_template_test"
                string="Contract"
                model="hop.dong"
                report_type="qweb-pdf"
                name="test_module.report_contract_template_test"
                file="test_module.report_contract_template_test"
                print_report_name="'Contract'"
        />
        <template id="report_contract_template_test">
            <t t-call="web.basic_layout">
                <t t-set="contract" t-value="docs[0]"/>
                <style>
                    .contract-info {
                    text-align: left;
                    font-size: 10pt;
                    margin-bottom: 5pt;
                    }
                </style>
                <div class="page">
                    <div class="col-sm-6">
                        <div align="center" style="font-size:10pt;margin-bottom:5pt;">
                            <h1>Contract Informations</h1>
                            <hr/>
                            <div class="contract-info">Employee's Name:
                                <t t-esc="contract.employee_id.name"/>
                            </div>
                            <div class="contract-info">Contract's Start Date:
                                <t t-esc="contract.start_date"/>
                            </div>
                            <div class="contract-info">Contract's End Date:
                                <t t-esc="contract.end_date"/>
                            </div>
                            <div class="contract-info">Contract's Signed Date:
                                <t t-esc="contract.signed_date"/>
                            </div>
                            <div class="contract-info">Contract's Type:
                                <t t-esc="contract.contract_type"/>
                            </div>
                            <div class="contract-info">Contract's Salary Rack:
                                <t t-esc="contract.salary_rack"/>
                            </div>
                            <div class="contract-info">Contract's Efficiency Wage:
                                <t t-esc="contract.efficiency_wage"/>
                            </div>
                            <div class="contract-info">Contract's Status:
                                <t t-esc="contract.status"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Tree View -->
        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop.dong.tree</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="contract_type"/>
                    <field name="signed_date"/>
                    <field name="salary_rack" groups="test_module.group_hr"/>
                    <field name="efficiency_wage" groups="test_module.group_hr"/>
                    <field name="status"/>
                    <field name="employee_role"/>
                    <field name="employee_job"/>
                    <field name="employee_level"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_search" model="ir.ui.view">
            <field name="name">hop.dong.search</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Running Contracts" name="filter_running" domain="[('status', '=', 'running')]"/>
                    <separator/>
                    <filter string="Salary filter" name="filter_salary" domain="[('total_salary', '>', 20000000)]"/>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop.dong.form</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <h1>
                                Create New Contract
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="contract_type"/>
                                <field name="signed_date"/>
                                <field name="salary_rack"/>
                                <field name="efficiency_wage"/>
                            </group>
                            <group>
                                <field name="employee_role" readonly="1"/>
                                <field name="employee_job" readonly="1"/>
                                <field name="employee_level" readonly="1"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop.dong</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_running': 1}</field>
        </record>

        <menuitem id="menu_hop_dong" name="Hợp đồng" action="action_hop_dong"
                  groups="test_module.group_hr,test_module.group_manager"/>
    </data>
</odoo>

