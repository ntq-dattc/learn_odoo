<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop.dong.tree</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="contract_type"/>
                    <field name="signed_date"/>
                    <field name="salary_rack" groups="test_module.group_hr"/>
                    <field name="efficiency_wage" groups="test_module.group_hr"/>
                    <field name="status"/>
                    <field name="employee_role"/>
                    <field name="employee_job"/>
                    <field name="employee_level"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_search" model="ir.ui.view">
            <field name="name">hop.dong.search</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Running Contracts" name="filter_running" domain="[('status', '=', 'running')]"/>
                    <separator/>
                    <filter string="Salary filter" name="filter_salary" domain="[('total_salary', '>', 20000000)]"/>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop.dong.form</field>
            <field name="model">hop.dong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <h1>
                                Create New Contract
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="contract_type"/>
                                <field name="signed_date"/>
                                <field name="salary_rack"/>
                                <field name="efficiency_wage"/>
                            </group>
                            <group>
                                <field name="employee_role" readonly="1"/>
                                <field name="employee_job" readonly="1"/>
                                <field name="employee_level" readonly="1"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop.dong</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_running': 1}</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_hop_dong" name="Hợp đồng" action="action_hop_dong" groups="test_module.group_hr,test_module.group_manager"/>
    </data>
</odoo>

