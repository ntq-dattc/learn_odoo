<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="after">
                <button name="action_view_payslips" type="object"
                        class="oe_stat_button" string="View Payslip"
                        icon="fa-file-text-o"
                        attrs="{'invisible': [('id', '=', False)]}"
                        context="{'active_id': active_id}">
                </button>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="after">
                <!-- Add other fields here -->
                <field name="status"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="before">
                <field name="date_onboard" readonly="1" attrs="{'invisible': ['&amp;', ('status', '!=', 'draft'), ('status', '!=', 'waiting_approve'), ('status', '!=', 'approved')]}"/>
                <field name="date_terminated" readonly="1" attrs="{'invisible': [('status', '!=', 'terminated')]}" />
            </xpath>
            <xpath expr="//field[@name='notes']" position="after">
                <!-- Thêm action button submit -->
                <button name="action_submit" string="Submit" type="object" attrs="{'invisible': [('status', 'not in', ['draft'])]}" class="oe_highlight"/>

                <!-- Thêm action button approve -->
                <button name="action_approve" string="Approve" type="object" attrs="{'invisible': [('status', 'not in', ['waiting_approve'])]}" class="oe_highlight"/>

                <!-- Thêm action button terminate -->
                <button name="action_terminate" string="Terminate" type="object" attrs="{'invisible': [('status', 'not in', ['approved'])]}" class="oe_highlight"/>

                <!-- Thêm action button set to draft -->
                <button name="action_set_to_draft" string="Set to Draft" type="object" attrs="{'invisible': [('status', '!=', 'terminated')]}" class="oe_highlight"/>
            </xpath>
            <xpath expr="//group" position="after">
                <group>
                    <field name="role_id"/>
                    <field name="level_id"/>
                    <field name="job_id"/>
                </group>
            </xpath>

            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="History Employee" action="action_history_employees">
                    <field name="history_employee_ids" context="{'tree_view_ref': 'view_history_employees_tree'}"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_department_filter_inherit" model="ir.ui.view">
        <field name="name">hr.employee.search.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <data>
                <!-- Thêm filter mới vào filter cha -->
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter string="Employee approved" name="filter_employee_approve" domain="[('status', '=', 'approved')]"/>
                    <filter name="onboard_this_month" string="Employees Onboard This Month" domain="[('date_onboard', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d')), ('date_onboard', '&lt;=', (context_today() + datetime.timedelta(days=31)).strftime('%Y-%m-%d'))]"/>
                    <filter name="terminated_this_month" string="Employees Terminated This Month" domain="[('date_terminated', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d')), ('date_terminated', '&lt;=', (context_today() + datetime.timedelta(days=31)).strftime('%Y-%m-%d'))]"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"search_default_filter_employee_approve": 1}</field>
        <field name="domain">{}</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new employee.
            </p>
            <p>
                With just a quick glance on the Odoo employee screen, you
                can easily find all the information you need for each person;
                contact data, job position, availability, etc.
            </p>
        </field>
    </record>

    <record id="hr.view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees" decoration-bf="message_needaction==True">
                <field name="name"/>
                <field name="work_phone"/>
                <field name="work_email"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="status"/>
                <field name="coach_id" invisible="1"/>
                <field name="message_needaction" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_history_employees_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree</field>
        <field name="model">employee.history</field>
        <field name="arch" type="xml">
            <tree string="History Employee">
                <field name="start"/>
                <field name="end"/>
                <field name="role_id"/>
                <field name="job_id"/>
                <field name="level_id"/>
                <field name="create_date"/>
                <field name="write_date"/>
                <field name="time"/>
            </tree>
        </field>
    </record>

    <record id="action_history_employees" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
